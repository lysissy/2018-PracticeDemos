<!Doctype html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Blog</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<header>
    <h1><%= title %></h1>
</header>
<nav>
    <span>
        <form action="/search" method="GET">
            <input type="text" name="keyword" placeholder="SEARCH" class="search">
        </form>
    </span>
    <span><a href="/" title="homepage">主页</a></span>

    <% if (user) { %>
    <span><a href="/post" title="post">发表</a></span>
    <span><a href="/logout" title="logout">登出</a></span>
    <% } else { %>
    <span><a href="/login" title="login">登录</a></span>
    <span><a href="/reg" title="register">注册</a></span>
    <% } %>

    <span><a href="/upload" title="upload">上传</a></span>
    <span><a href="/archive" title="archive">存档</a></span>
    <span><a href="/tags" title="tags">标签</a></span>
    <span><a href="/links" title="links">友情链接</a></span>
</nav>
<article>
    <% if (success) { %>
        <div><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div><%= error %></div>
    <% } %>